/* HeroSearch private styles */
.search-result
  & li
    width: 195px
    height: 16px
    padding: 5px
    border-right: 1px solid gray
    border-bottom: 1px solid gray
    border-left: 1px solid gray
    background-color: white
    cursor: pointer
    list-style-type: none
    &:hover
      background-color: #607D8B
    > a
      display: block
      color: #888
      text-decoration: none
      &:hover
        color: white
      &:active
        color: white
#search-box
  width: 200px
  height: 20px
ul.search-result
  margin-top: 0
  padding-left: 0